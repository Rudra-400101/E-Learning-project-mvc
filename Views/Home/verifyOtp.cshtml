
@{
    ViewBag.Title = "verifyOtp";
    Layout = "~/Views/Shared/GeneralLayout.cshtml";
}

<style>
    form {
        min-width: 300px;
    }
</style>

<form class="w-25 border rounded shadow p-3 mx-auto mt-5" id="formData" method="post" action="/home/verifyOtp">
    <h5 class="text-secondary text-center">Verify <span class="text-primary">OTP...</span></h5>
    <input type="text" name="otp" id="otp" placeholder="Enter OTP..." class="form-control my-3" />
    <input type="submit" id="btn" disabled value="Verify OTP" class="btn btn-primary" />
</form>
<script>
    //match user otp for verification
    document.getElementById("otp").addEventListener("keyup", function () {
        if ($("#otp").val()!=@Session["otp"].ToString()) {
            $("#btn").attr("disabled", "");
        } else {
            $("#btn").removeAttr("disabled", "");
        }
    })
</script>

